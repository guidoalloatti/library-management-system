<div class="container mt-5">
  <h1 class="mb-4"><%= @book.title %></h1>

  <dl class="row">
    <dt class="col-sm-2">Author</dt>
    <dd class="col-sm-10"><%= @book.author %></dd>

    <dt class="col-sm-2">Genre</dt>
    <dd class="col-sm-10"><%= @book.genre %></dd>

    <dt class="col-sm-2">ISBN</dt>
    <dd class="col-sm-10"><%= @book.isbn %></dd>

    <dt class="col-sm-2">Total Copies</dt>
    <dd class="col-sm-10"><%= @book.total_copies %></dd>
  </dl>

  <div class="mt-3">
    <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-warning' %>
    <%= link_to 'Back to Books', books_path, class: 'btn btn-secondary' %>
  </div>
</div>